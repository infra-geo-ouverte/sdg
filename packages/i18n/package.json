{
  "name": "@igo2/sdg-i18n",
  "version": "1.0.0",
  "license": "LiLiQ-R",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infra-geo-ouverte/sdg.git",
    "directory": "packages/i18n"
  },
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=24.0.0"
  },
  "exports": {
    ".": {
      "import": "./src/public-api.ts"
    }
  },
  "scripts": {
    "build": "ng build i18n --configuration production",
    "postbuild": "node --import tsx ../../scripts/src/post-build.mts i18n",
    "format": "prettier --check ./src/**/*.{ts,js,html,scss,css,json}",
    "format.fix": "prettier --write ./src/**/*.{ts,js,html,scss,css,json}",
    "lint": "ng lint i18n",
    "lint.fix": "ng lint i18n --fix",
    "test": "ng test i18n --watch=false",
    "test.watch": "ng test i18n",
    "watch": "ng build i18n --watch"
  },
  "peerDependencies": {
    "@angular/common": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@igo2/sdg-core": "*",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0"
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "sideEffects": false
}
