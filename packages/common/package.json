{
  "name": "@igo2/sdg-common",
  "version": "1.0.0-next.110",
  "license": "LiLiQ-R",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infra-geo-ouverte/sdg.git",
    "directory": "packages/common"
  },
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=24.0.0"
  },
  "exports": {
    ".": {
      "import": "./src/public-api.ts"
    }
  },
  "scripts": {
    "build": "ng build common --configuration production",
    "postbuild": "node --import tsx ../../scripts/src/post-build.mts common",
    "format": "prettier --check ./src/**/*.{ts,js,html,scss,css,json}",
    "format.fix": "prettier --write ./src/**/*.{ts,js,html,scss,css,json}",
    "lint": "ng lint common",
    "lint.fix": "ng lint common --fix",
    "test": "ng test common --watch=false",
    "test.watch": "ng test common",
    "watch": "ng build common --watch && npm run postbuild"
  },
  "peerDependencies": {
    "@angular/cdk": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/material": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@igo2/sdg-core": "*"
  },
  "dependencies": {
    "tslib": "^2.6.0"
  },
  "sideEffects": false
}
