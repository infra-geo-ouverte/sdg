{
  "name": "@igo2/sdg",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infra-geo-ouverte/sdg.git"
  },
  "scripts": {
    "build": "ng build sdg",
    "postbuild": "node --import tsx ../scripts/src/post-build.mts sdg",
    "format": "prettier --check ./**/*.{ts,js,html,scss,css,json}",
    "format.fix": "prettier --write ./**/*.{ts,js,html,scss,css,json}",
    "lint": "ng lint sdg",
    "lint.fix": "ng lint sdg --fix",
    "test": "ng test sdg --watch=false",
    "watch": "ng build sdg --watch"
  },
  "exports": {
    ".": {
      "import": "./src/public-api.ts",
      "sass": "./core/_index.scss"
    },
    "./layout": {
      "sass": "./core/src/layout/layout.scss"
    },
    "./core": {
      "import": "./core/src/public-api.ts"
    },
    "./geo": {
      "import": "./geo/src/public-api.ts"
    }
  },
  "peerDependencies": {
    "@angular/common": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/material": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@igo2/context": "^18.0.0-next",
    "@igo2/core": "^18.0.0-next",
    "@igo2/integration": "^18.0.0-next",
    "@igo2/geo": "^18.0.0-next",
    "@igo2/utils": "^18.0.0-next",
    "bootstrap": "^5.3.0"
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "sideEffects": false,
  "version": "1.0.0-next.42"
}
